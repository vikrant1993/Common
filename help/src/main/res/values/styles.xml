<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarDefault">
        <item name="CalendarViewLayout">@style/CalendarDefaultCalendarViewLayout</item>
        <item name="CalendarGridView">@style/CalendarDefaultGridView</item>
        <item name="CalendarNormalCell">@style/CalendarDefaultNormalCell</item>
        <item name="CalendarSquareCell">@style/CalendarDefaultSquareCell</item>
        <item name="CalendarWeekdayView">@style/CalendarDefaultWeekday</item>
    </style>

    <style name="CalendarDefaultCalendarViewLayout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CalendarDefaultGridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:listSelector">@null</item>
        <item name="android:background">@color/lighter_gray</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="CalendarDefaultCell">
        <item name="android:textColor">@color/cell_text_color</item>
        <item name="android:background">@drawable/cell_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDefaultNormalCell" parent="CalendarDefaultCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CalendarDefaultSquareCell" parent="CalendarDefaultCell" />

    <style name="CalendarDefaultWeekday">
        <item name="android:textColor">@color/middle_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="crop_ImageViewWidgetIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="crop_WrapperIconState">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="crop_WrapperRotateButton">
        <item name="android:layout_width">@dimen/crop_size_wrapper_rotate_button</item>
        <item name="android:layout_height">@dimen/crop_size_wrapper_rotate_button</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="crop_TextViewCropAspectRatio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/crop_height_crop_aspect_ratio_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">@color/crop_scale_text_view_selector</item>
    </style>

    <style name="crop_TextViewWidgetText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/crop_color_widget_text</item>
        <item name="android:layout_marginTop">@dimen/crop_margin_top_widget_text</item>
        <item name="android:textSize">@dimen/crop_text_size_widget_text</item>
    </style>

    <style name="crop_TextViewWidget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/crop_margin_top_controls_text</item>
        <item name="android:textColor">@color/crop_color_widget_active</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/crop_text_size_controls_text</item>
    </style>

</resources>