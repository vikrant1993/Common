<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crop_photobox"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/crop_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controls_wrapper"
        android:background="@color/crop_color_crop_background">

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="@dimen/crop_default_crop_logo_size"
            android:layout_height="@dimen/crop_default_crop_logo_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_crop"
            tools:background="@drawable/ic_crop"
            tools:ignore="ContentDescription,MissingPrefix" />

        <vk.help.crop.view.CropView
            android:id="@+id/crop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/controls_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:visibility="gone" />

</RelativeLayout>